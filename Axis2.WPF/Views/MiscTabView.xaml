<UserControl x:Class="Axis2.WPF.Views.MiscTabView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Axis2.WPF.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Section des sorts -->
        <GroupBox Header="Spells" Grid.Column="0" Margin="5">
            <DockPanel>
                <Button DockPanel.Dock="Bottom" Content="Cast Spell" Margin="5" Command="{Binding CastSpellCommand}"/>
                <ListView ItemsSource="{Binding Spells}" SelectedItem="{Binding SelectedSpell}">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="ID" DisplayMemberBinding="{Binding ID}" Width="50"/>
                            <GridViewColumn Header="DefName" DisplayMemberBinding="{Binding DefName}" Width="100"/>
                            <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}" Width="100"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </DockPanel>
        </GroupBox>

        <!-- Section des sons -->
        <GroupBox Header="Sounds" Grid.Column="1" Margin="5">
            <DockPanel>
                <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="Play" Margin="2" Command="{Binding PlaySoundCommand}"/>
                    <Button Content="Send" Margin="2" Command="{Binding SendSoundCommand}"/>
                    <Button Content="Stop" Margin="2" Command="{Binding StopSoundCommand}"/>
                </StackPanel>
                <ListView ItemsSource="{Binding Sounds}" SelectedItem="{Binding SelectedSound}">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="ID" DisplayMemberBinding="{Binding DisplayID}" Width="50"/>
                            <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}" Width="100"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </DockPanel>
        </GroupBox>

        <!-- Section de la musique -->
        <GroupBox Header="Music" Grid.Column="2" Margin="5">
            <DockPanel>
                <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="Play" Margin="2" Command="{Binding PlayMusicCommand}"/>
                    <Button Content="Send" Margin="2" Command="{Binding SendMusicCommand}"/>
                    <Button Content="Stop" Margin="2" Command="{Binding StopMusicCommand}"/>
                </StackPanel>
                <ListView ItemsSource="{Binding MusicTracks}" SelectedItem="{Binding SelectedMusicTrack}">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="ID" DisplayMemberBinding="{Binding ID}" Width="50"/>
                            <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}" Width="150"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </DockPanel>
        </GroupBox>
    </Grid>
</UserControl>